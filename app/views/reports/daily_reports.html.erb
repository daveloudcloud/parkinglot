<div class="flex flex-col w-full justify-center items-center mb-8">
  <div class='flex flex-col bg-blue-500 w-2/5 mt-12 text-center p-20 rounded-md shadow-2xl'>
    <h1 class='text-4xl text-white'>Parking Lot App</h1> 
    <h3 class='text-white'>Daily Reports</h3>
    <div class='flex flex-col justify-center items-center my-8'>
      <div class='flex flex-col mt-6'>
        <h2 class='flex items-center gap-4 text-white pb-6'>
          Active Customers Today: 
          <p class='flex justify-center items-center w-4 h-4 p-4 bg-white text-red-600 rounded-full'><%= @customers.size %></p>
        </h2>
      </div>  
      
      <% if @customers.empty? %>
        <div class='flex justify-center items-center w-full'>
          <p class='p-4 bg-white text-red-600 rounded-full'>No more active customers today.</p>
        </div>        
      <% else %>
        <% @customers.each do |data| %>
          <div class='flex justify-center items-center w-full'>
            <div class='flex justify-between items-center w-1/2'>
              <p class='w-1/2 text-white'>Plate Number:</p>
              <p class='w-1/2 text-white'><%= data.plate_number %></p>
              <%= link_to "View", data, class: "bg-blue-400 p-2 border-2 border-white text-white w-28 rounded-md shadow-xl" %>
            </div> 
          </div>
        <% end %>             
      <% end %>
    </div>
    <div class='flex flex-col justify-center items-center my-8'>
      <div class='flex flex-col mt-6'>
        <h2 class='flex items-center gap-4 text-white pb-6'>
          Archived Customers Today: 
          <p class='flex justify-center items-center w-4 h-4 p-4 bg-white text-red-600 rounded-full'><%= @archived.size %></p>
        </h2>
      </div>     
      <% @archived.each do |data| %>
        <div class='flex justify-center items-center w-full'>
          <div class='flex justify-between items-center w-1/2'>
            <p class='w-1/2 text-white'>Plate Number:</p>
            <p class='w-1/2 text-white'><%= data.plate_number %></p>
          </div> 
          <div class='flex justify-between items-center w-1/2'>
            <p class='w-1/2 text-white'>Amount Paid:</p>
            <p class='w-1/2 text-white'>Php <%= data.amount_paid %>.00</p>
          </div>           
          <%= link_to "View", data, class: "bg-blue-400 p-2 border-2 border-white text-white w-28 rounded-md shadow-xl" %>
        </div>
      <% end %>
      <div class='flex justify-between items-center w-full mt-4'>
        <p class='flex w-full text-white'>TOTAL INCOME TODAY:</p>
        <div class='flex justify-center w-full p-4 bg-white text-red-600 rounded-full'>
          Php <%= @total_income_today %>.00
        </div>
      </div>
    </div>    
    <div class="flex justify-end items-center mt-8 gap-2">
      <%= link_to "Back To Income Reports", income_reports_url, class: "p-2 border-2 border-white text-white w-48 rounded-md shadow-xl" %>
    </div>  
   </div>    
</div>