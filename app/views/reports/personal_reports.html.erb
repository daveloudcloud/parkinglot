<div class="flex flex-col w-full justify-center items-center">
  <div class='flex flex-col bg-blue-500 w-2/5 my-8 text-center p-20 rounded-md shadow-2xl'>
    <h1 class='text-4xl text-white'>Parking Lot App</h1> 
    <h1 class='text-xl text-white'>Employee Report</h1> 
    
    <div class='flex flex-col justify-center items-center w-100 border border-white p-3 mt-4 mb-2 rounded-xl'>
      <div class='flex justify-between w-full pb-1'>
        <p class='w-1/2 text-white'>Employee ID:</p>
        <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @employee.id %></p>
      </div>
      <div class='flex justify-between w-full pb-1'>
        <p class='w-1/2 text-white'>Employee Email:</p>
        <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @employee.email %></p>
      </div>
      <div class='flex justify-between w-full pb-1'>
        <p class='w-1/2 text-white'>Employee Name:</p>
        <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @employee.name %></p>
      </div>
      <div class='flex justify-between w-full pb-1'>
        <p class='w-1/2 text-white'>Date Started:</p>
        <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @employee.created_at %></p>
      </div>
      <div class='flex justify-between w-full pb-1'>
        <p class='w-1/2 text-white'>Admin Rights:</p>
        <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @employee.admin %></p>
      </div>
    
    </div>
    
    <div class='flex flex-col justify-center items-center w-100 border border-white p-3 mt-4 mb-2 rounded-xl'>
      <% if @customers.empty? %>
        <p class='flex justify-center items-center h-4 p-4 bg-white text-red-600 rounded-full'>No Active Customer Data.</p>
      <% else %>
        <h2 class='text-white'>Active Customers List:</h2>
        <div class='flex justify-between w-full my-4'>
          <p class='w-1/2 text-white'>Customers Admitted:</p>
          <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @customers.size %></p>
        </div> 
        <div class='h-56 overflow-y-auto my-8'>       
          <%= render "active_customers_list" %>          
        </div>
      <% end %>
    </div>    

    <div class='flex flex-col justify-center w-100 border border-white p-3 mt-4 mb-2 rounded-xl'>
      <% if @archived_customers.empty? %>
        <p class='text-white'>No Customer Data.</p>
      <% else %>
        <h2 class='text-white'>Archived Customers List:</h2>
        <div class='flex justify-between items-center w-full my-4'>
          <p class='w-1/2 text-white'>Customers Admitted:</p>
          <p class='flex justify-center items-center w-1/2 h-4 p-4 bg-white text-red-600 rounded-full'><%= @archived_customers.size %></p>
        </div>  
        <div class='h-56 overflow-y-auto my-8'>
          <%= render "archived_customers_list" %>          
        </div>      
      <% end %>
    </div>    

    <div class="flex justify-end items-center mt-8">
      <%= link_to "Back To Dashboard", dashboard_url, class: "p-2 border-2 border-white text-white w-48 rounded-md shadow-xl" %>
    </div>    
   
   </div>
</div>

